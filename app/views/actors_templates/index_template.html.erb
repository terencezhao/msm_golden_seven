<h1>All Actors</h1>

<a href="/actors/new">
  Add a new actor
</a>

<ul>
  <% @actors.each do |actor| %>
   <div class="thumbnail">
    <img src="<%= actor.image_url %>">
    <p><%= actor.name %></p>
    <p><%= actor.bio %></p>
    <p><%= actor.dob %></p>
    <p><%= actor.image_url %></p>
    <div class="caption">
      <a href="/actors/<%= actor.id %>" class="btn btn-default btn-block">
        Show details
      </a>

      <a href="/actors/<%= actor.id %>/edit" class="btn btn-default btn-block">
        Edit
      </a>

      <a href="/delete_actor/<%= actor.id %>" class="btn btn-default btn-block">
        Delete
      </a>
    </div>
  </div>
  <% end %>
</ul>